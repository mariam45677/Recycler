<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/mobile_image_details"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="250dp"
        android:src="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/mobile_name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mobile_image_details"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Nexus 6P"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/mobile_manufacture_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Huawei"
        app:layout_constraintTop_toBottomOf="@id/mobile_image_details"
        app:layout_constraintStart_toEndOf="@id/mobile_image_details"
        android:textSize="20sp" />


</androidx.constraintlayout.widget.ConstraintLayout>
